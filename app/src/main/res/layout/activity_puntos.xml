<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context="com.proyectogrupo.PuntosActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp">

        <TextView android:id="@+id/tvPuntos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1200"
            android:textSize="60dp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>

        <TextView android:id="@+id/tvRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NUEVO RÃ‰CORD"
            android:textSize="40dp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|bottom">

        <ImageButton android:id="@+id/btnVolverJugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/boton_volver_jugar"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:onClick="volverJugarClicked" />

        <ImageButton android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/boton_menu"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:onClick="menuClicked" />

    </LinearLayout>
</FrameLayout>
