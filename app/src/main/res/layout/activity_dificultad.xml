<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondodificultad"
    tools:context="com.proyectogrupo.DificultadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center_vertical">

        <ImageButton android:id="@+id/btnFacil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facil"
            android:contentDescription="@string/facil"
            android:onClick="onFacil"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"/>

        <ImageButton android:id="@+id/btnMedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/medio"
            android:contentDescription="@string/medio"
            android:onClick="onMedio"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"/>

        <ImageButton android:id="@+id/btnDificil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dificil"
            android:contentDescription="@string/dificil"
            android:onClick="onDificil"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"/>

        <ImageButton android:id="@+id/btnExtremo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/extremo"
            android:contentDescription="@string/extremo"
            android:onClick="onExtremo"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"/>

    </LinearLayout>
</FrameLayout>
