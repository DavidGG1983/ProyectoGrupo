<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_derrota"
    tools:context="com.proyectogrupo.DerrotaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:orientation="vertical">

        <ImageButton android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/boton_volver_jugar"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:onClick="volverJugarClicked" />

        <ImageButton android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/boton_menu"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"
            android:onClick="menuClicked"
            />

    </LinearLayout>
</FrameLayout>
